<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_intro"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:background="#32384a"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/logobueno" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:paddingTop="40dp"
                android:text="BIENVENIDO, QUE TENGAS UN EXCELENTE DÍA"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <EditText
            android:id="@+id/txtidUsuarioPaMascota"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:text="Name" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/content_color">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="AGREGA TU MASCOTA"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="106dp"
                            android:layout_height="90dp"
                            app:srcCompat="@drawable/agrega_pet_p" />
                        <TextView
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:paddingEnd="25dp"
                            android:text="Podra registrar a su mascota con sus datos en la cual pueda ser reconocido sin problemas"
                            android:textAlignment="gravity"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_agrega_Mascota"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#FF6E6E"
                        android:text="Ver Más"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp"
                        android:layout_marginBottom="10dp"
                        app:icon="@drawable/ic_baseline_double_arrow_24"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/content_color">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="VER MIS MASCOTAS"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="106dp"
                            android:layout_height="90dp"
                            app:srcCompat="@drawable/crud_mascotaaa" />
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:paddingEnd="25dp"
                            android:text="Podra editar, eliminar sus mascotas que tengas registrados, asi mismo podra generar el QR de su mascota"
                            android:textAlignment="gravity"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_crud_Mascota"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#FF6E6E"
                        android:text="Ver Más"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp"
                        android:layout_marginBottom="10dp"
                        app:icon="@drawable/ic_baseline_double_arrow_24"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>




