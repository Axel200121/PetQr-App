<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_intro"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:text="DATOS PERSONALES"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_gold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:padding="30dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/datos_personales">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_gold" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Ingrese su nombre"
            android:textColorHint="@color/white"
            app:startIconDrawable="@drawable/ic_user_login">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNombreEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:shadowColor="#044343"
                android:textColor="@color/white"
                android:background="@drawable/content_color"
                android:enabled="false"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese el apellido Paterno"
            android:textColorHint="@color/white"
            app:startIconDrawable="@drawable/ic_apellidos">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtApellidoPaternoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:background="@drawable/content_color"
                android:textColor="@color/white"
                android:shadowColor="#044343"
                android:enabled="false"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese el apellido Materno"
            android:textColorHint="@color/white"
            app:startIconDrawable="@drawable/ic_apellidos">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtApellidoMaternoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/content_color"
                android:textColor="@color/white"
                android:inputType="textPersonName"
                android:shadowColor="#044343"
                android:enabled="false"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese numero telefonico"
            android:textColorHint="@color/white"
            app:startIconDrawable="@drawable/ic_telefono"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTelefonoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:shadowColor="#044343"
                android:background="@drawable/content_color"
                android:textColor="@color/white"
                android:enabled="false"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese su dirección"
            android:textColorHint="@color/white"
            app:startIconDrawable="@drawable/ic_direccion">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDireccionEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:shadowColor="#044343"
                android:background="@drawable/content_color"
                android:textColor="@color/white"
                android:enabled="false"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/white"
            android:hint="Ingrese su correo electronico"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtCorreoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textWebEmailAddress"
                android:shadowColor="#044343"
                android:background="@drawable/content_color"
                android:textColor="@color/white"
                android:enabled="false"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese su contraseña"
            android:textColorHint="@color/white"
            app:startIconDrawable="@drawable/ic_user_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPasswordEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                android:enabled="false"
                android:shadowColor="#044343"
                android:textColor="@color/white"
                android:background="@drawable/content_color"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tvIdUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActivarCajas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#ffc600"
            android:text="HABILITAR CAMPOS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            android:onClick="activarCajas"
            app:icon="@drawable/ic_baseline_double_arrow_24"
            tools:ignore="TouchTargetSizeCheck" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FF6E6E"
            android:text="Actualizar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            android:onClick="editarUsuario"
            app:icon="@drawable/ic_baseline_double_arrow_24"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</ScrollView>

