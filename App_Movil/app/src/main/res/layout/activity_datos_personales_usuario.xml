<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DATOS PERSONALES"
            android:textColor="#456677"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:padding="70dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logosplash"></ImageView>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Ingrese su nombre"
            app:startIconDrawable="@drawable/ic_user_login">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNombreEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:shadowColor="#044343"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese el apellido Paterno"
            app:startIconDrawable="@drawable/ic_apellidos">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtApellidoPaternoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:shadowColor="#044343"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese el apellido Materno"
            app:startIconDrawable="@drawable/ic_apellidos">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtApellidoMaternoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:shadowColor="#044343"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese numero telefonico"
            app:startIconDrawable="@drawable/ic_telefono"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTelefonoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:shadowColor="#044343"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese su dirección"
            app:startIconDrawable="@drawable/ic_direccion">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDireccionEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:shadowColor="#044343"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese su correo electronico"
            app:startIconDrawable="@drawable/ic_correo_electronico"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtCorreoEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textWebEmailAddress"
                android:shadowColor="#044343"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese su contraseña"
            app:startIconDrawable="@drawable/ic_user_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPasswordEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                android:shadowColor="#044343"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tvIdUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"/>

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cardview_default_elevation"
            android:backgroundTint="#456677"
            android:onClick="editarUsuario"
            android:shadowRadius="@integer/material_motion_duration_long_2"
            android:text="Editar mi información" />
    </LinearLayout>
</ScrollView>

