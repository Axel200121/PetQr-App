<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.95"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="680dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:cardMaxElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="REGISTRO"
                    android:textAlignment="center"
                    android:textColor="?attr/color"
                    android:textSize="25dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/color"></TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="242dp"
                    android:padding="80dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_agregar_usuaario"></ImageView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Ingrese los datos"
                            android:textColor="?attr/color"
                            android:textSize="25dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?attr/color"></TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="340dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Ingrese su nombre"
                            app:startIconDrawable="@drawable/ic_user_login">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_nombre"
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="textPersonName"
                                android:shadowColor="#044343"
                                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="340dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="20dp"
                            android:hint="Ingrese apellidos"
                            app:startIconDrawable="@drawable/ic_apellidos">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_apellidos"
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="textPersonName"
                                android:shadowColor="#044343"
                                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="340dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="20dp"
                            android:hint="Ingrese numero telefonico"
                            app:startIconDrawable="@drawable/ic_telefono">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_telefono"
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="number"
                                android:shadowColor="#044343"
                                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="340dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="20dp"
                            android:hint="Ingrese su dirección"
                            app:startIconDrawable="@drawable/ic_direccion">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_direccion"
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="number"
                                android:shadowColor="#044343"
                                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="340dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="20dp"
                            android:hint="Ingrese su correo electronico"
                            app:startIconDrawable="@drawable/ic_correo_electronico">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_correo"
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="textWebEmailAddress"
                                android:shadowColor="#044343"
                                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="340dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="20dp"
                            android:hint="Ingrese su contraseña"
                            app:startIconDrawable="@drawable/ic_user_password">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_password"
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="textPassword"
                                android:shadowColor="#044343"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_registrar_usuario"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"

                                android:text="Registrarse"
                                app:cornerRadius="10dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_cancelarRegistro"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="@color/rojoclaro"
                                android:text="Cancelar"
                                app:cornerRadius="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>