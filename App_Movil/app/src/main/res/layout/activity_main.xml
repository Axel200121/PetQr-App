<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="362dp"
        android:layout_height="778dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192"
        app:srcCompat="@drawable/eclipse_splash" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="383dp"
        android:layout_height="427dp"
        android:layout_marginLeft="-120dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/logomorado" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="-35dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/tvTitle1Splash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuidemos tus"
                android:textColor="#000"
                android:textSize="33dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMascotaSplash"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:text="mascotas"
                    android:textColor="#1814BC"
                    android:textSize="33dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNameSplash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="en PetQr"
                    android:textColor="#000"
                    android:textSize="33dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingStart="60dp"
                android:paddingEnd="50dp"
                android:text="Ayudemos a regresarlos a su casa"
                android:textAlignment="center"
                android:textColor="#7F7F7F"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEmpezarApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1814BC"
                android:text="Iniciar SesiÃ³n" />

            <Button
                android:id="@+id/btnEmpezarApp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1814BC"
                android:text="Crea tu cuenta" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>