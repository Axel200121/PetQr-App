<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_intro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:orientation="vertical"
        android:background="#32384a">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/logobueno" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:paddingTop="40dp"
                android:textColor="@color/white"
                android:text="BIENVENIDO, QUE TENGAS UN EXCELENTE DÍA"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <EditText
            android:id="@+id/txtNombre1"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:text="Name" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:background="@drawable/content_color"
                app:cardMaxElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/content_color">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="DATOS PERSONALES"
                        android:textAlignment="center"
                        android:paddingEnd="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="106dp"
                            android:layout_height="90dp"
                            app:srcCompat="@drawable/iconlogin" />
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:text="Podra ver toda su información personal que se usara para generar el QR"
                            android:textAlignment="gravity"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_panel_datosPersonales"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#FF6E6E"
                        android:text="Ver Más"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp"
                        android:layout_marginBottom="10dp"
                        app:icon="@drawable/ic_baseline_double_arrow_24"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/content_color">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="ADMINISTRA TUS MASCOTAS"
                        android:textAlignment="textEnd"
                        android:paddingEnd="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="106dp"
                            android:layout_height="90dp"
                            app:srcCompat="@drawable/icon_panel_pet" />
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:paddingEnd="16dp"
                            android:text="Podra ver administrar sus mascotas, asi mimo podra generar el QR"
                            android:textAlignment="gravity"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_panel_mascotas"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#FF6E6E"
                        android:text="Ver Más"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp"
                        android:layout_marginBottom="10dp"
                        app:icon="@drawable/ic_baseline_double_arrow_24"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/content_color">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="LECTOR QR"
                        android:textAlignment="center"
                        android:paddingEnd="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="106dp"
                            android:layout_height="90dp"
                            app:srcCompat="@drawable/icon_escanearqr" />
                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:paddingEnd="12dp"
                            android:text="Lector de QR podra leer cualquier QR no solo los que genera la APP"
                            android:textAlignment="gravity"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_panel_generaQr"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#FF6E6E"
                        android:text="Ver Más"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp"
                        android:layout_marginBottom="10dp"
                        app:icon="@drawable/ic_baseline_double_arrow_24"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>

